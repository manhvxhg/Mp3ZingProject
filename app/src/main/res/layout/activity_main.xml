<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.manhnd16.mp3zingproject.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:id="@+id/home_tablayout"
        app:tabIndicatorColor="@color/tablayout_indicator_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tablayout_indicator_home"
        app:tabTextColor="@color/colorDark"
        app:tabIndicatorHeight="@dimen/dp_2"
        android:background="@android:color/transparent">
    </android.support.design.widget.TabLayout>
</LinearLayout>
