<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/relative_layout_playlist"
    >

    <TextView

        android:id="@+id/txt_title_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="@string/title_playlist"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/sp_30" />

    <ListView
        android:id="@+id/playlist_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_title_playlist"></ListView>
    <TextView
        android:id="@+id/loadmore_playlist_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDark"
        android:layout_marginBottom="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/colorSilver"
        android:layout_below="@id/playlist_listview"
        android:paddingLeft="@dimen/dp_6"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/dp_20"
        android:text="@string/title_loadmore_playlist"
        />
</RelativeLayout>