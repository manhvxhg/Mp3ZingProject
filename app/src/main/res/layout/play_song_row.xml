<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/play_music_row_index_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/colorPlayMusicIndex"
        android:text="1"
        android:layout_margin="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/play_music_row_name_song_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/play_music_row_index_textview"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_250"
        android:text="Ten ca khuc"
        android:textColor="@color/colorPlayMusicIndex" />
    <TextView
        android:id="@+id/play_music_row_name_singer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/play_music_row_index_textview"
        android:layout_below="@+id/play_music_row_name_song_textview"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_250"
        android:text="Ten ca si"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorPlayMusicIndex" />
</RelativeLayout>