<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_6"
    android:elevation="@dimen/dp_6"
    android:id="@+id/list_song_cardview"
    >
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/list_song_index_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:text="1"
            android:layout_margin="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/list_song_name_textview"
            android:maxWidth="@dimen/dp_250"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TEN CA KHUC"
            android:textSize="@dimen/sp_20"
            android:layout_toRightOf="@id/list_song_index_textview"
            android:textColor="@color/colorSongListSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/list_song_sing_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEN CA SI"
            android:layout_toRightOf="@id/list_song_index_textview"
            android:layout_below="@id/list_song_name_textview"
            android:textColor="@color/colorSingerListSong"
            android:textSize="@dimen/sp_20"
            />
        <ImageView
            android:id="@+id/favourite_image_list_song_detail"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_6"
            android:src="@drawable/iconlove"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>