<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_item_relative_layout"
    >
    <ImageView
        android:id="@+id/search_item_imageview"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/dp_4"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80" />
    <TextView
        android:id="@+id/search_item_name_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_250"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/search_item_imageview"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorSongNameSearchItem"
        android:text="@string/album_hot_title"
        />
    <TextView
        android:id="@+id/search_item_name_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_250"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/search_item_imageview"
        android:layout_below="@id/search_item_name_song"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/colorSilver"
        android:text="@string/album_hot_title"
        />
    <ImageView
        android:id="@+id/search_item_favourite_imageview"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_6"
        />
</RelativeLayout>