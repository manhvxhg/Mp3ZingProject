<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/album_relative"
        android:padding="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/album_hot_title"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/album_hotloadmore_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loadmore_title_subject_and_kind"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorTint"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_album_hot"
        android:layout_below="@id/album_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>