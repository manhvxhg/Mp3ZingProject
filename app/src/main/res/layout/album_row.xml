<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10">
    <LinearLayout
        android:id="@+id/album_hot_cardview_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/album_imageview"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            />
        <TextView
            android:maxWidth="@dimen/dp_200"
            android:textSize="@dimen/sp_20"
            android:id="@+id/album_name_textview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ngày xuân long phụng sum vầy abc abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            />
        <TextView
            android:maxWidth="@dimen/dp_200"
            android:id="@+id/singer_name_textview"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="OnlyC"
            android:textColor="@color/colorSingerName"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>